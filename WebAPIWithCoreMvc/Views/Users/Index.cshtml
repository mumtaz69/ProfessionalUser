@model IEnumerable<Entities.Dtos.User.UserDetailDto>
@{
    ViewData["Title"] = "Index";
}
<h1>Kullanıcılar</h1>

<a class="btn btn-primary mb-3" asp-action="Add">Kullanıcı Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Kullanıcı Adı</td>
            <td>Adı</td>
            <td>Soyadı</td>
            <td>Password</td>
            <td>Cinsiyeti</td>
            <td>Doğum tarihi</td>
            <td>Email</td>
            <td>Adres</td>
            <td>Telefon</td>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Password</td>
                <td>@item.Gender</td>
                <td>@item.DateOfBirth</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>@item.PhoneNumber</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="w3-btn w3-black w3-badge w3-margin-left w3-white">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="w3-btn w3-red w3-badge w3-margin-left">sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>